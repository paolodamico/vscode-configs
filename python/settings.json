{
  "python.pythonPath": "/path/to/project/bin/python",
  "python.linting.pylintEnabled": true,
  "python.linting.enabled": true,
  "python.linting.pylintArgs": [
    "--load-plugins=pylint_django",
    "--errors-only"
  ],
  "search.exclude": {
    "**/site-packages": true,
    "**htmlcov/": true,
    "**env/": true,
    "**media/": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/site-packages": true,
    "**htmlcov/": true,
    "**env/": true,
    "**media/": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/__pycache__": true,
    "venv": true,
    "env*": true,
    "**/media": true,
    ".coverage": true,
    "**htmlcov/": true,
    ".python-version": true
  }
}
