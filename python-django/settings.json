{
  "python.pythonPath": "/path/to/project/bin/python",
  "python.linting.pylintEnabled": true,
  "python.linting.enabled": true,
  "python.linting.pylintArgs": [
    "--load-plugins=pylint_django",
    "--errors-only"
  ],
  "python.formatting.provider": "black",
  "editor.formatOnSave": true,
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    "editor.rulers": [89]
  },
  "search.exclude": {
    "**/site-packages": true,
    "**htmlcov/": true,
    "**env/": true,
    "**media/": true
  },
  "files.watcherExclude": {
    "**/.git": true,
    "**/site-packages": true,
    "**htmlcov/": true,
    "**env/": true,
    "**media/": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/__pycache__": true,
    "venv": true,
    "env*": true,
    "**/media": true,
    ".coverage": true,
    "**htmlcov/": true,
    ".python-version": true
  }
}
